{
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "es2021",
            "esnext",
            "esnext.asynciterable"
        ],
        "jsx": "preserve",
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        // TypeGraphQL
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": [
        "/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}